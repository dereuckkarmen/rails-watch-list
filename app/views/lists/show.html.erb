<h1>Movies in the <%= @list.name %> list:</h1>

<% @bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.rating %></p>
  <p><%= bookmark.movie.title %></p>
  <p><%= bookmark.movie.overview %></p>
  <p><%= bookmark.comment %></p>
  <%= link_to "Delete this bookmark", bookmark_path(bookmark), data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } %>
 <% end %>

<%= link_to "Add a new bookmark", new_list_bookmark_path(@list) %>
<%= link_to "Back to all lists", lists_path %>
