<body>


<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key, crop: :fill %>);">
  <div class="container">
    <h1>Movies in the <%= @list.name %> list:</h1>
  </div>
</div>

<div class="cards">
  <% @bookmarks.each do |bookmark| %>
  <div class="card p-3 mx-3 shadow">
    <%= image_tag bookmark.movie.poster_url %>
    <div class="card-body">
      <h3><strong><%= bookmark.movie.title %></strong></h3>
      <h5> Rating: <%= bookmark.movie.rating %></h5>
      <%= bookmark.movie.overview %>
      <p class="mb-3 mt-2"><strong><em><%= bookmark.comment %></em></strong></p>
      <p><%= link_to "Delete this bookmark", bookmark_path(bookmark), data: { turbo_method: "delete", turbo_confirm: "Are you sure?" }, class: "btn btn-primary p-2 btnlink" %></p>
    </div>
  </div>
  <% end %>
</div>



<div class="buttons p-2 m-2">
  <%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-primary btnlink" %>
  <%= link_to "Back to all lists", lists_path, class: "btn btn-primary btnlink" %>
</div>

</body
